<style>
    .row{
        
        margin-top: 62px;
        margin-bottom: 0px;
    }
    .box{
        background-color: #040717;
    }
</style>
<div class="box">

    <% if(success && success.length){ %>
    
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 row" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    
    
    <% if(error && error.length){ %>
    
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 row" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
</div>
