<% layout("/layouts/boilerplate") %>
    <div class="signup_body">
        <div class="form_container">
            <form class="needs-validation sign-up_form" method="POST" action="/signup" novalidate>
                <h1>Sign up</h1>
                <div class="input-group flex-nowrap">
                    <label for="username" class="input-group-text" id="addon-wrapping"><i
                            class="fa-solid fa-user"></i></label>
                    <input type="text" name="username" class="form-control" id="username" placeholder="Enter a username"required />
                    <div class="valid-feedback"> <br> Looks Good!</div>
                </div>
                <div class="input-group flex-nowrap">
                    <label for="email" class="input-group-text" id="addon-wrapping"><i class="fa-regular fa-envelope"></i></label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Enter a Email"required />
                </div>
                <div class="input-group flex-nowrap">
                    <label for="password" class="input-group-text" id="addon-wrapping"><i
                            class="fa-solid fa-key"></i></label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Enter a new password" required/>
                </div>
                <button class="btn btn-lg">Create Account</button>

                <!-- <div class="sign-up">
                    <a href="/login" id="forgot">Already have an account?Log in</a>
                </div> -->

                <div class="sign-up">
                    <a href="#" id="forgot">Already have an account?</a>
                    <a href="/login" id="sign">Log in</a>
                  </div>

            </form>
        </div>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" />
    </div>